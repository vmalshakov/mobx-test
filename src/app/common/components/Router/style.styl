@import '../../styles/vars.styl'

.header
    text-align: center

.menu
    display: flex
    justify-content: space-around
    padding-bottom: 20px
    border-bottom: 1px solid $main-color
    @media screen and (max-width: 600px)
        flex-direction: column
    &__item
        font-size: 1.5rem
        color: $inactive-color        
        &:hover
        &:active
            color: $inactive-color - 20%
        &--active
        &--valid
            color: $active-color
            &:hover
            &:active
                color: $active-color + 20%

.link-button
    height: $input-height
    background-color: $main-color
    color: #FFF
    box-shadow: none 
    border: 1px solid $main-color
    padding: 10px 30px
    line-height: 100%
    cursor: pointer
    margin: 0px 10px
    transition: all 300ms ease-in-out
    &:hover
        background-color: $main-color + 20%
    
.chevron
    content: ''
    border-style: solid
    border-width: 0.25em 0.25em 0 0    
    display: inline-block
    top: 1em
    left: 0
    position: relative
    transform: rotate(45deg)
    vertical-align: top
    height: 0.8em
    width: 0.8em
    @media screen and (max-width: 600px)
        display: none
